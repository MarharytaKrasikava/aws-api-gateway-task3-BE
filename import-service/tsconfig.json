{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "declaration": true,
    "rootDir": ".",
    "baseUrl": "src"
  },
  "resolve": {
    "extensions": [".mjs", ".json", ".ts", ".js"]
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
